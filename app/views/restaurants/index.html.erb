<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div class="row">
    <div class="col-10">
      <%= link_to restaurant_path(restaurant), class:"card-product-link" do %>
        <%= render 'card', restaurant: restaurant %>
      <% end %>
    </div>
    <div class="col-2">
      <% if policy(restaurant).edit? %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-flat btn-sm btn-info btn-block" %>
      <% end %>
      <% if policy(restaurant).destroy? %>
        <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-flat btn-sm btn-danger btn-block" %>
      <% end %>
    </div>
  </div>

  <br>
<% end %>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-flat btn-sm btn-primary" %>
